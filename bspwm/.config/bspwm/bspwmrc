#! /bin/sh

$HOME/.config/bspwm/screen_setup.sh $1
$HOME/.config/bspwm/autolaunch.sh
# bspc monitor -d 1 2 3 4 5 6 7 8 9
# bspc monitor eDP-1 -d 1 2 3 4 5 6 7 8 9
# bspc monitor HDMI-2 -d 1 2 3 4 5 6 7 8 9



bspc config border_width         1
bspc config window_gap           5

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config bottom_padding 0
bspc config top_padding 0

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Gnome-calculator desktop='^8' state=floating follow=on
bspc rule -a Wechat desktop='^7' -o state=pseudo_tiled follow=on 
bspc rule -a igoer desktop='^7' -o state=pseudo_tiled follow=on 
bspc rule -a v2ray desktop='^6' -o state=floating follow=on rectangle=1200x800+360+150
bspc rule -a Microsoft\ Word desktop='^8' follow=on 
bspc rule -a Mendeley\ Desktop desktop='^9' follow=on 
bspc rule -a Google-chrome desktop='^1'
bspc rule -a netease-cloud-music desktop='^6' follow=on
bspc rule -a mplayer2 state=floating
bspc rule -a Screenkey manage=off
bspc rule -a vifm desktop='^4' follow=off locked=on -o state=floating rectangle=1200x800+360+150 
bspc rule -a pomotroid desktop='^3' follow=off locked=on -o state=floating rectangle=350x470+1500+100


#### BSPWM coloring ####
bspc config normal_border_color		      "#4c566a"
bspc config active_border_color	        "#1e1e1e"
bspc config focused_border_color	      "#5e81ac"
bspc config presel_feedback_color	      "#5e81ac"
bspc config urgent_border_color 	      "#dd2727"



# Remove x cursor
# xsetroot -cursor_name left_ptr &

#enable touchpad tapping and natural scrolling
# xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
# xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled" 1

